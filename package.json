{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "bark-github-action",
  "version": "1.0.0",
  "description": "GitHub Action for sending notifications to Bark",
  "type": "module",
  "private": true,
  "main": "lib/src/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "lib/src/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "package": "ncc build lib/index.js --source-map --license licenses.txt"
  },
  "repository": "https://github.com/chimpdev/bark.js.git",
  "bugs": {
    "url": "https://github.com/chimpdev/bark.js/issues"
  },
  "contributors": [
    "chimpdev <skyhancloud@gmail.com>"
  ],
  "license": "GPL-3.0-only",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "homepage": "https://github.com/chimpdev/bark.js#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.12.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@thiskyhan/bark.js": "^2.0.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
